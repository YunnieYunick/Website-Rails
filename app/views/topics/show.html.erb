<% provide :title ,"Topics" %>
<% provide :dasboards_active ,"active" %>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="h2"><%= @topic.title %></h1>
      <p><%= @topic.body %></p>
      <div>        
        <% if staff_user_signed_in? %>
        <%= link_to '戻る', topics_path, class: "btn btn-primary" %>
        <%= link_to '編集', edit_topic_path(@topic), class: "btn btn-primary" %>
        <% else %>
        <%= link_to '戻る', root_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
